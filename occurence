<script>
  var  num = [0,2,2,3,0,4,2];
  var val = 2;
  var nums_length =num.length;
  console.log("length of the array :",nums_length);
  var index =0;
  while(index<nums_length){
    if(num[index]===val){
      console.log(num[index],index);
      num.splice(index,1);
      index = 0;
    }
    index++;
  }
</script>
