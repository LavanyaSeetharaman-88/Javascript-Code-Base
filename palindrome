<script>
    var input = 1;
    var palindrome = input.toString();
    console.log(typeof(palindrome));
    //convert var to array
    var spliting = palindrome.split("");
    console.log(spliting);
    var reversed = spliting.reverse().join("");
    console.log(reversed);
    if(palindrome === reversed){
        console.log("matched");
    }else{
        console.log("not matched")
    }
</script>
